import java.util.Scanner;

public class Pessoa
{
    public static void main(String[] args)
    {
        double peso, altura;
        String nome;

        Scanner entrada=new Scanner(System.in);

        System.out.println("Informe seu nome: ");
        nome=entrada.nextLine();

        System.out.println("Digite a sua altura em centímetros: ");
        altura=entrada.nextDouble();

        System.out.println("Digite o valor de seu peso em Quilogramas: ");
        peso=entrada.nextDouble();

        System.out.println("Suas informações são as seguintes: \n"+"Seu nome é: "+nome);
        System.out.printf("Sua altura é: %.0f",altura," cm.");
        System.out.println();
        System.out.printf("Seu peso é: %.2f",peso," Kg.");
    }
}
